<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit_pos_monero" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.pos.payment.monero</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="is_cryptocurrency" readonly="1" groups="base.group_no_one" condition="use_payment_terminal == 'monero-rpc'"/>
                <field name="rpc_protocol" on_change="update_rpc_server()" condition="use_payment_terminal == 'monero-rpc'"/>
                <field name="monero_rpc_config_host" on_change="update_rpc_server()" condition="use_payment_terminal == 'monero-rpc'"/>
                <field name="monero_rpc_config_port" on_change="update_rpc_server()" condition="use_payment_terminal == 'monero-rpc'"/>
                <field name="monero_rpc_config_user" on_change="update_rpc_server()" condition="use_payment_terminal == 'monero-rpc'"/>
                <field name="monero_rpc_config_password" on_change="update_rpc_server()" condition="use_payment_terminal == 'monero-rpc'"/>
                <field name="type" readonly="1" string="Type" condition="use_payment_terminal == 'monero-rpc'"/>
                <field name="num_confirmation_required" condition="use_payment_terminal == 'monero-rpc'"/>
            </xpath>
        </field>
    </record>
</odoo>

