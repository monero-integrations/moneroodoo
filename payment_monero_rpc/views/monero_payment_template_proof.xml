<odoo>
    <template id="monero_payment_proof">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center mb-4">
                        <h2 t-esc="_('Payment Confirmation')"/>
                        <h3 class="text-success">
                            <i class="fa fa-check-circle"></i> <span t-esc="_('Monero Payment Verified')"/>
                        </h3>
                        <p class="mb-1">
                            <strong t-esc="_('Date:')"/> 
                            <span t-esc="format_datetime(payment.write_date)"/>
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h4 t-esc="_('Payment Details')"/>
                            <table class="table table-sm">
                                <tr>
                                    <td width="40%" t-esc="_('Order Reference')"/>
                                    <td t-esc="payment.order_ref"/>
                                </tr>
                                <tr>
                                    <td t-esc="_('Amount Paid')"/>
                                    <td>
                                        <span t-esc="'%.12f' % payment.amount_received"/> XMR
                                        <small class="text-muted">
                                            (â‰ˆ <span t-esc="'%.2f' % payment.original_amount"/> 
                                            <span t-esc="payment.original_currency"/>)
                                        </small>
                                    </td>
                                </tr>
                                <tr>
                                    <td t-esc="_('Confirmations')"/>
                                    <td>
                                        <span t-esc="payment.confirmations"/>/
                                        <span t-esc="payment.required_confirmations"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h4 t-esc="_('Payment Address')"/>
                            <p><code t-esc="payment.address"/></p>
                            <h4 t-esc="_('Payment ID')"/>
                            <p><code t-esc="payment.payment_id"/></p>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h4 t-esc="_('Transaction Proof')"/>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th t-esc="_('TXID')"/>
                                        <th t-esc="_('Amount (XMR)')"/>
                                        <th t-esc="_('Block Height')"/>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="payment.transaction_ids" t-as="tx">
                                        <tr>
                                            <td><small><code t-esc="tx.txid"/></small></td>
                                            <td t-esc="'%.12f' % tx.amount"/>
                                            <td t-esc="tx.block_height"/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12 text-center">
                            <div class="border-top pt-3">
                                <p class="text-muted mb-1" t-esc="_('This document serves as proof that the Monero payment was received and verified.')"/>
                                <p class="text-muted">
                                    <span t-esc="_('Verification timestamp:')"/> 
                                    <span t-esc="format_datetime(datetime.now())"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
