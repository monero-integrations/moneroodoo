<odoo>
    <record id="view_monero_payment_kanban" model="ir.ui.view">
        <field name="name">monero.payment.kanban</field>
        <field name="model">monero.payment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <field name="display_name"/>
                                </div>
                                <div>
                                    <span>Amount: </span>
                                    <field name="amount"/>
                                    <span t-esc="' ' + currency"/>
                                </div>
                                <div>
                                    <span>Received: </span>
                                    <field name="amount_received"/>
                                </div>
                                <div>
                                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,paid_unconfirmed,confirmed,expired,failed"/>
                                </div>
                                <div class="text-center mt8">
                                    <img t-att-src="'/monero/qr/%s' % id" width="100" height="100" alt="QR Code"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
