<odoo>
    <template id="monero_payment_notification" name="Monero Payment Notification">
        <t t-call="mail.mail_notification_layout">
            <div class="email-body">
                <h2 t-esc="_('Monero Payment Initiated')"/>
                <p>
                    <span t-esc="_('Hello')"/>, 
                    <t t-if="object.partner_id.name" t-esc="object.partner_id.name"/>
                    <t t-else="" t-esc="_('Customer')"/>,
                </p>
                
                <p>
                    <span t-esc="_('Your payment request for order')"/> 
                    <strong t-esc="object.order_ref"/>
                    <span t-esc="_('has been processed.')"/>
                </p>
                
                <div class="alert alert-info" style="padding: 10px; background: #f8f9fa; border-left: 4px solid #17a2b8;">
                    <h3 style="margin-top: 0;" t-esc="_('Payment Details')"/>
                    <p>
                        <strong t-esc="_('Amount:')"/> 
                        <span t-esc="'%.12f' % object.amount"/> XMR 
                        <t t-if="object.original_amount">
                            (â‰ˆ <span t-esc="'%.2f' % object.original_amount"/> 
                            <span t-esc="object.original_currency"/>)
                        </t>
                    </p>
                    <p>
                        <strong t-esc="_('Payment Address:')"/><br/>
                        <code t-esc="object.address"/>
                    </p>
                    <t t-if="object.payment_id">
                        <p>
                            <strong t-esc="_('Payment ID:')"/><br/>
                            <code t-esc="object.payment_id"/>
                        </p>
                    </t>
                </div>
                
                <p t-esc="_('Please send the exact amount to the Monero address above. The payment will expire in 24 hours.')"/>
                
                <div class="text-center" style="margin: 20px 0;">
                    <a t-att-href="'/shop/payment/monero/' + str(object.id)" 
                       class="btn btn-primary" 
                       style="padding: 10px 20px; background: #007bff; color: white; text-decoration: none; border-radius: 4px;"
                       t-esc="_('View Payment Page')"/>
                </div>
                
                <p t-esc="_('For assistance, please contact our support team.')"/>
            </div>
        </t>
    </template>
</odoo>
