<odoo>
    <template id="monero_status_widget" name="Monero Status Widget">
        <div class="monero-status-widget" t-att-data-payment-id="payment_id">
            <div class="progress" style="height: 25px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated" 
                     role="progressbar" 
                     t-att-style="'width: ' + (confirmations/required_confirmations*100) + '%;'"
                     t-att-aria-valuenow="confirmations"
                     t-att-aria-valuemin="0"
                     t-att-aria-valuemax="required_confirmations">
                    <span t-esc="confirmations"/>/<span t-esc="required_confirmations"/> Confirmations
                </div>
            </div>
            <div class="mt-2 text-center">
                <small class="text-muted">
                    Block Height: <span t-esc="block_height"/>
                </small>
            </div>
        </div>
    </template>
</odoo>
