<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="MoneroPaymentFormTemplate">
        <div id="o_payment_form" class="payment-form">
            <!-- Example: Payment options loop -->
            <t t-foreach="props.paymentOptions" t-as="option">
                <label class="payment-option">
                    <input 
                        type="radio" 
                        name="o_payment_radio" 
                        t-att-data-payment-option-id="option.id"
                        t-on-click="() => state.selectOption(option)"
                        checked="option.id === state.selectedOption?.id"
                    />
                    <span t-esc="option.name"/>
                </label>
                <!-- Inline form (conditionally shown) -->
                <div t-if="option.id === state.selectedOption?.id" class="inline-form">
                    <!-- Tokenization checkbox -->
                    <div t-if="state.showInputs" class="tokenize-container">
                        <input type="checkbox" id="tokenize" name="o_payment_tokenize_checkbox"/>
                        <label for="tokenize">Save for future payments</label>
                    </div>
                </div>
            </t>
            <!-- Submit button -->
            <button 
                t-on-click="submitForm" 
                t-att-disabled="!state.selectedOption || state.isProcessing"
            >
                Pay Now
            </button>
        </div>
    </template>
</odoo>
