<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_monero" model="ir.ui.view">
        <field name="name">Monero Acquirer Form</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'monero')]}">
                    <field name="is_cryptocurrency" readonly="1" groups="base.group_no_one"/>
                    <field name="wallet_type" on_change="update_rpc_server()"/>
                    <field name="account_index" />
                    <field name="wallet_primary_address" on_change="validate_wallet_primary_address()"/>
                    <field name="wallet_private_view_key" on_change="validate_wallet_private_view_key()"/>
                    <field name="network_type" on_change="validate_wallet()"/>
                    <field name="rpc_uri" on_change="update_rpc_server()"/>
                    <field name="rpc_username" on_change="update_rpc_server()"/>
                    <field name="rpc_password" on_change="update_rpc_server()"/>
                    <field name="type" readonly="1" string="Type" groups="base.group_no_one"/>
                    <field name="num_confirmation_required"/>
                    <field name="payment_expiration"/>
                    <field name="exchange_rate_api"/>
                    <br/>
                    <a href="https://www.getmonero.org/downloads/"
                       target="_blank"
                       colspan="2">
                        How to create a Monero Wallet?
                    </a>
                    <a href="https://docs.getmonero.org/interacting/monero-wallet-rpc-reference/"
                       target="_blank"
                       colspan="2">
                        How to configure a Monero Wallet RPC?
                    </a>
                    <a href="https://docs.getmonero.org/interacting/monerod-reference/"
                       target="_blank"
                       colspan="2">
                        How to configure a Monero Daemon RPC?
                    </a>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
